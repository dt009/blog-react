{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-css-modules",
    "stylelint-config-recommended-scss"
  ],
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "no-descending-specificity": null,
    "declaration-block-trailing-semicolon": null,
    "at-rule-no-unknown": [
      true,
      ignoreAtRules: [
        "/^mixin$/",
        "/^include$/"
      ]
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      ignorePseudoClasses: [
        "global"
      ]
    ]
  }
}
